<h1>This is the edit page</h1>

<%= form_for @entry do |f| %>
  <p>
    <%= f.label :word %>
    <%= f.text_field :word %>
  </p>

  <p>
    <%= f.label :definition %>
    <%= f.text_area :definition %>
  </p>

  <p>
    <%= f.label :language %>
    <%= f.text_field :language %>
  </p>

  <p>
    <%= f.submit %>
  </p>
<% end %>

<p><%= link_to "delete", entry_path(@entry), method: :delete %></p>
