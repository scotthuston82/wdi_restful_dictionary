<h1>For adding new entries</h1>

<%= form_for @entry do |f| %>
  <p>
    <%= f.label :word %>
    <%= f.text_field :word %>
  </p>

  <p>
    <%= f.label :definition %>
    <%= f.text_area :definition %>
  </p>

  <p>
    <%= f.label :language %>
    <%= f.text_field :language %>
  </p>

  <p>
    <%= f.submit %>
  </p>
<% end %>
